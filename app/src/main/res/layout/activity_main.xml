<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.raj.oohhhhhcr.MainActivity">

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camBtn"
        android:src="@drawable/cam_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/galleryBtn"
        android:onClick="camBtn"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/galleryBtn"
        android:src="@drawable/gall_btn"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/camBtn"
        android:onClick="gallBtn"/>

    <requestFocus
        android:layout_alignTop="@+id/ok_button"
        android:layout_centerHorizontal="true" />

    <requestFocus
        android:layout_alignTop="@+id/ok_button"
        android:layout_centerHorizontal="true" />

    <requestFocus
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ok_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImage"
        android:layout_below="@+id/galleryBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />


</RelativeLayout>
